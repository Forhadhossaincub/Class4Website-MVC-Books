@model Class4Website.Models.Book
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<h2>This is Create View</h2>

<div class="row">

    <div class="col-12">
        <h3>Create New book</h3>
        @using (Html.BeginForm())
        {
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Title, new { @class = "col-form-label col-2" })
                <div class="col-5">
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.CoverPrice, new { @class = "col-form-label col-2" })
                <div class="col-5">
                    @Html.TextBoxFor(x => x.CoverPrice, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.CoverPrice, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Genre, new { @class = "col-form-label col-2" })
                <div class="col-5">
                    @Html.EnumDropDownListFor(x => x.Genre, "---Select---", new { @class = "form-select" })
                    @Html.ValidationMessageFor(x => x.Genre, "", new { @clas = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-1">

                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-success">Save to Database</button>
                </div>
            </div>

        }
    </div>

    <div class="col-12">
        @Html.ActionLink("Back to List","Index", "Books")

    </div>

</div>

@section scripts{
    <script src="~/Scripts/jquery-3.6.4.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}